<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        >
    <TextView
            android:id="@+id/item_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/shape_red"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:text="新"
            android:textColor="@color/red"
            android:textSize="@dimen/text_mini_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginStart="@dimen/dp_20"/>
    <TextView
            android:id="@+id/item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_new"
            app:layout_constraintTop_toTopOf="@id/item_new"
            android:textSize="@dimen/text_mini_12"
            android:drawablePadding="5dp"
            app:layout_goneMarginStart="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_10"
            tools:text="作者名"
            />
    <TextView
            android:id="@+id/item_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/item_author"
            app:layout_constraintTop_toTopOf="@id/item_author"
            android:textSize="@dimen/text_mini_12"
            android:textColor="@color/green"
            android:background="@drawable/shape_green"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            app:layout_goneMarginLeft="0dp"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            tools:text="标签"
            />

    <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_author"
            app:layout_constraintBottom_toBottomOf="@id/item_author"
            android:textSize="@dimen/text_mini_12"
            android:layout_marginEnd="@dimen/dp_20"
            tools:text="5小时前"
            />

    <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_author"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            tools:text="标题"
            />

    <TextView
            android:id="@+id/item_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/item_title"
            app:layout_constraintTop_toBottomOf="@id/item_title"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/text_mini_12"
            android:textColor="@color/red"
            android:background="@drawable/shape_red"
            android:paddingStart="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="置顶"
            android:visibility="gone"
            />


    <TextView
            android:id="@+id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_mini_12"
            app:layout_constraintStart_toEndOf="@id/item_top"
            app:layout_constraintTop_toTopOf="@id/item_top"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_goneMarginStart="0dp"
            app:layout_goneMarginTop="@dimen/dp_15"
            tools:text="标签" />


    <ImageView
            android:id="@+id/item_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="@id/item_time"
            app:layout_constraintTop_toTopOf="@id/item_tag"
            app:layout_constraintBottom_toBottomOf="@id/item_tag"
            android:src="@mipmap/timeline_like_normal"
            />
</androidx.constraintlayout.widget.ConstraintLayout>