<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/search_hotkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="大家都在搜"
            android:gravity="left"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/gray_69"
            android:layout_marginStart="@dimen/dp_10"
            />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_hot_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@id/search_hotkey"
            />
    <TextView
            android:id="@+id/search_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/search_hot_rv"
            android:text="常用网站"
            android:gravity="left"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/gray_69"
            android:layout_marginStart="@dimen/dp_10"
            />
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_site_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_5"
            app:layout_constraintTop_toBottomOf="@id/search_site"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="@dimen/dp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>